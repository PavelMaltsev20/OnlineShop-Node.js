extends ../layouts/main-layouts.pug 

block styles
    link(rel="stylesheet", href="/css/forms.css")

block content
    main 
        if products.length > 0 
            .grid 
                each item in products 
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{item.title}
                        .card__image 
                            img(src= `${item.imageUrl}`)
                        .card__content 
                            h2.product__price $#{item.price}
                            p.product_description #{item.desc}
                        .card__actions 
                            a(href=`/products/${item.id}`)  Details 
                            button.btn Add to card
        else 
            h3 No products 