{{#if hasProducts}}
  {{#each products}}
    <div class="grid">
      <article class="card product-item">
        <header class="card__header">
        <h1 class="product__title">{{this.title}}</h1>
        </header>
        <div class="card__image">
        <img src="https://media.istockphoto.com/photos/blue-book-picture-id1281955543?b=1&k=20&m=1281955543&s=170667a&w=0&h=ZmwacrjQewEU3RqJLYufA-Bi7JVOI2JgcB8X0o7vPeI="/>
        </div>
        <div class="card__content"  >
          <h2 class="product__price">$ 18.99</h2>
          <p class="product__description">Very good book</p>
        </div>
        <div class="card__actions">
          <button class="btn">Add to Cart</button>
        </div>
      </article>
    </div>
  {{/each}}
{{ else}}
  <h1>No products found!</h1>
{{/if}}