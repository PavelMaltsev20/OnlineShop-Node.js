include ../mixins/buttons.pug

mixin listOfItems(products)
    .grid 
        each item in products 
            article.card.product-item 
                header.card__header 
                    h1.product__title #{item.title}
                .card__image 
                    img(src= `${item.imageUrl}`)
                .card__content 
                    h2.product__price $#{item.price}
                    p.product_description #{item.desc}
                .card__actions
                    +deleteInCart(item.id) 
                        