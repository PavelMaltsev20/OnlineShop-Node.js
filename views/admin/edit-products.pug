extends ../layouts/main-layouts.pug 

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main 
        form.product-form(action=`/admin/update/${product.id}` method="POST")
            .form-control
                label(for="title") Title of the product
                    input(type="text", name="title" value=product.title) 

                label(for="imageUrl") Image URL
                    input(type="text", name="imageUrl" value=product.imageUrl)

                label(for="price") Price
                    input(type="number", name="price" step="0.01" value=product.price)

                label(for="desc") Decription
                    textarea(name="desc", cols="30", rows="5")  #{product.desc}
                    
                button Update product 
                    input(type="hidden" name="productId" value=product.id)